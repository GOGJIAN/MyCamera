<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.CropActivity">
    <com.naver.android.helloyako.imagecrop.view.ImageCropView
            android:id="@+id/img_crop_photo"
            android:visibility="gone"
            xmlns:imagecrop="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            imagecrop:outsideLayerColor="#66000000"
            imagecrop:setInnerGridMode="on"
            imagecrop:gridInnerStroke="1dp"
            imagecrop:gridInnerColor="#66ffffff"
            imagecrop:setOuterGridMode="on"
            imagecrop:gridOuterColor="#ffffff"/>
    <RelativeLayout
            android:id="@+id/crop_title"
            android:paddingTop="28dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize">
            <TextView
                    android:paddingLeft="20dp"
                    android:id="@+id/crop_cancel"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:text="上一步"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textSize="18sp"
                    android:text="裁剪"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_alignParentRight="true"
                    android:paddingRight="20dp"
                    android:id="@+id/crop_done"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:text="完成"
                    android:textColor="#41B6E6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>